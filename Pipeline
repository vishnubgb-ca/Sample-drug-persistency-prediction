pipeline{
    agent any

    stages{
        stage("Install Requirements"){
            steps{
                sh 'pip3 install req.txt'
            }
        }

        stage("Extract Data"){
            steps{
                sh 'python3 loading_data.py'
            }
        }
        stage("Data Analysis"){
            steps{
                sh 'python3 data_analysis.py'
            }
        }
        stage("Data Preprocessing"){
            steps{
                sh 'python3 data_preprocessing.py'
            }
        }
        stage("Data Visualization"){
            steps{
                sh 'python3 data_visualization.py'
            }
        }
        stage("Feature Engineering"){
            steps{
                sh 'python3 feature_engg.py'
            }
        }
    }
    post{
       
        always {
            archiveArtifacts artifacts: 'drug_persistency_prediction.csv', onlyIfSuccessful: true
        }
            }
}
